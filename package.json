{
  "name": "twinespace",
  "version": "2.0.0",
  "description": "Twine 2 story format supporting locative and mixed reality projects",
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand ",
    "test:clean": "npm test && npm run clean:test",
    "clean:test": "rimraf -g \"test/**/*.bundle.js\"",
    "build": "webpack --config webpack.prod.config.cjs && node build-format.js",
    "build:dev": "webpack --config webpack.config.cjs && node build-format.js",
    "build:analyze": "npm run build && open bundle-report.html",
    "build:clean": "npm run build && find build -name '*.bundle.js' ! -name 'core.bundle.js' -type f -delete",
    "lint": "eslint src/*.js --fix",
    "lint:test": "eslint test/* --fix",
    "all": "npm run lint && npm run build && npm run build:clean && npm run test && npm run clean:test",
    "docs": "serve ./docs",
    "build-format": "node build-format.js",
    "quicktest": "extwee -c -i quicktest/index.twee -o quicktest/index.html -s docs/dist/format.js && open-cli quicktest/index.html",
    "quicktest-serve": "extwee -c -i quicktest/index.twee -o quicktest/index.html -s docs/dist/format.js && open-cli http://localhost:3000 && serve quicktest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videlais/twine-space.git"
  },
  "keywords": [
    "twine2",
    "story-format",
    "locative",
    "mixed-reality"
  ],
  "author": "Dan Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/videlais/twine-space/issues"
  },
  "homepage": "https://github.com/videlais/twine-space#readme",
  "dependencies": {
    "@babylonjs/core": "^8.34.0",
    "@babylonjs/materials": "^8.34.0",
    "@material/web": "^2.4.1",
    "html-entities": "^2.6.0",
    "jquery": "^3.7.1",
    "markdown-it": "^14.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/expect-puppeteer": "^5.0.6",
    "@types/jest-environment-puppeteer": "^5.0.6",
    "@types/puppeteer": "^7.0.4",
    "babel-jest": "^30.2.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "ejs": "^3.1.10",
    "eslint": "^9.39.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^61.1.11",
    "extwee": "^2.3.7",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^11.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "open": "^10.2.0",
    "open-cli": "^8.0.0",
    "puppeteer": "^24.27.0",
    "rimraf": "^6.1.0",
    "serve": "^14.2.5",
    "shelljs": "^0.10.0",
    "webpack": "^5.102.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "type": "module",
  "overrides": {
    "eslint-plugin-import": {
      "eslint": "^9.39.0"
    },
    "eslint-plugin-promise": {
      "eslint": "^9.39.0"
    }
  }
}
