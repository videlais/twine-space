{
  "name": "twinespace",
  "version": "2.0.0",
  "description": "Twine 2 story format supporting locative and mixed reality projects",
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand ",
    "build": "webpack && node build-format.js",
    "lint": "eslint src/*.js --fix",
    "lint:test": "eslint test/* --fix",
    "all": "npm run lint && npm run build && npm run test",
    "docs": "serve ./docs",
    "build-format": "extwee -c -i quicktest/index.twee -o quicktest/index.html -s docs/dist/format.js",
    "quicktest": "extwee -c -i quicktest/index.twee -o quicktest/index.html -s docs/dist/format.js && open-cli quicktest/index.html",
    "quicktest-serve": "extwee -c -i quicktest/index.twee -o quicktest/index.html -s docs/dist/format.js && open-cli http://localhost:3000 && serve quicktest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videlais/twine-space.git"
  },
  "keywords": [
    "twine2",
    "story-format",
    "locative",
    "mixed-reality"
  ],
  "author": "Dan Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/videlais/twine-space/issues"
  },
  "homepage": "https://github.com/videlais/twine-space#readme",
  "dependencies": {
    "@babylonjs/core": "^7.2.1",
    "@babylonjs/materials": "^7.2.1",
    "@material/web": "^1.4.0",
    "html-entities": "^2.5.2",
    "jquery": "^3.7.1",
    "markdown-it": "^14.1.0",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@types/expect-puppeteer": "^5.0.6",
    "@types/jest-environment-puppeteer": "^5.0.6",
    "@types/puppeteer": "^7.0.4",
    "babel-jest": "^29.7.0",
    "css-loader": "^7.1.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "ejs": "^3.1.8",
    "eslint": "^9.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "extwee": "^2.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "mini-css-extract-plugin": "^2.8.1",
    "open": "^10.1.0",
    "open-cli": "^8.0.0",
    "puppeteer": "^22.6.4",
    "serve": "^14.2.1",
    "shelljs": "^0.8.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.0.0"
  },
  "type": "module"
}
